<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#96424242"
    app:cardCornerRadius="40dp"
    app:cardElevation="6dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imagePlanetas"
                android:layout_width="305dp"
                android:layout_height="305dp"
                android:layout_gravity="start"
                android:clickable="true"
                android:contentDescription="@string/imageplanetas"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#dc424242"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/nameplanetasPlanetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tvnameplanetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="12sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#96424242"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/categoriaPlanetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_categoriaplanetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="12sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#96424242"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/magnitudaparentePlanetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_distanciasplanetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="12sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#96424242"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/elementosorbitalesPlanetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_element_orbitales_planetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="12sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#96424242"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/elementosorbitalesderivados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_fisicas_planetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="12sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#96424242"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/atmosferaPlanetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_atmosfera_planetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="12sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#96424242"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/caracteristicasPrincipalesPlanetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_principales_planetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="8sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#96424242"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/caracteristicasFisicasPlanetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_fisicas_planetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="8sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#96424242"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/caracteristicasAtmosfericasPlanetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_atmosfericas_planetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="8sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#96424242"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/masaPlanetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_masa_planetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="8sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#96424242"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/satelitesPlanetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_satelites_planetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="8sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#96424242"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/otrosDatosPlanetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/tv_otrosdatos_planetas"
                android:textColor="@color/cardview_light_background"
                android:textSize="8sp" />
        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v7.widget.CardView>