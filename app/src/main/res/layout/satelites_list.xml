<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imageSatelites"
                android:layout_width="305dp"
                android:layout_height="305dp"
                android:layout_gravity="start"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/tvnombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tvnameplanetas"
                android:textColor="@color/cardview_light_background" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/tvtipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_categoriaplanetas"
                android:textColor="@color/cardview_light_background" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/tvplaneta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_distanciasplanetas"
                android:textColor="@color/cardview_light_background" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/tvcaracteristicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_element_orbitales_planetas"
                android:textColor="@color/cardview_light_background" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/tvdescubridor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5sp"
                android:text="@string/tv_fisicas_planetas"
                android:textColor="@color/cardview_light_background" />
        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v7.widget.CardView>