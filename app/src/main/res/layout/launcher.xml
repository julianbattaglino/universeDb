<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/jupiter"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="jupiter.json"
        app:lottie_loop="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/phonological"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="40dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="phonological.json"
        app:lottie_loop="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/button"
        android:layout_width="1500dp"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="getstartedbutton.json"
        app:lottie_loop="true" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardviewtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#96424242"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/universedb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cardviewtitle"
            android:fontFamily="@font/roboto_condensed_bold_italic"
            android:text="@string/universe_database"
            android:textSize="36sp" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/powered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-26dp"
        android:layout_marginBottom="42dp"
        android:layout_toStartOf="@+id/phonological"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="@string/powered_by"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dharma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="33dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="@string/dharma"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold|italic" />


</RelativeLayout>