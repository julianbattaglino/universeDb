<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".viewpager.FragmentoNebulosas">


    <android.support.v7.widget.CardView
        android:id="@+id/cardviewtvnebula1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#96424242"
        app:cardCornerRadius="7dp"
        app:cardElevation="10dp">


        <TextView
            android:id="@+id/tvnebula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cardviewtvnebula1"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="Nebulosas"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewtvnebula2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        app:cardBackgroundColor="#96424242"
        app:cardCornerRadius="7dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/tvnebulaplanetarias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="Nebulosas Planetarias"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/nebulosas"
        android:layout_width="205dp"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/nebulosa" />

    <ImageView
        android:id="@+id/nebulosasplanetarias"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="133dp"
        android:src="@drawable/nebulaplanetaria" />


</RelativeLayout>