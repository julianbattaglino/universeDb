<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardview_gradient"
    tools:context="com.example.julian.syloperligas.ViewPagerFragments.Fragmento1">


    <ImageView
        android:id="@+id/galaxy"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/galaxy" />

    <ImageView
        android:id="@+id/galaxyhat"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignStart="@+id/galaxy"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/galaxyhat" />

    <TextView
        android:id="@+id/tvgalaxias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="314dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Galaxias"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>


